<UserControl x:Class="MarketPlatForm.wpf.Components.CategoryComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MarketPlatForm.wpf.Components"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="40" d:DesignWidth="150">
    <Border CornerRadius="5" Background="White">
        <Button 
         x:Name="category_btn"
            Click="category_btn_Click"
         Content="Lavash"
         FontSize="22"
         Style="{DynamicResource category_Button}">

        </Button>
    </Border>
</UserControl>
